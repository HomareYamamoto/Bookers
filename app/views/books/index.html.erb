<h1>Books</h1>
<span>Title</span>
<span>Body</span>
<% if @books %>
  <% @books.each do |book| %>

    <span>
      <%= book.title %></span>

      <%= book.body %>

      <%= link_to "Show", book_path(book.id) %>
      <%= link_to "Edit", edit_book_path(book.id) %>


    </span>
  <% end %>
<% else %>
  <p>No books found.</p>
<% end %>



<h2>New Book</h2>

<%= form_with model: @book, url: '/books', method: :post do |f|%>
<h4>Title</h4>
<%= f.text_field :title %>

<h4>Body</h4>
<%= f.text_field :body %>

<div><%= f.submit 'Create Book' %></div>

<% end %>