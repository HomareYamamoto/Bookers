<h1>Books</h1>
<span>Title</span>
<span>Body</span>

  <% @books.each do |book| %>

    <span>
      <%= book.title %>

      <%= book.body %>

      <%= link_to "Show", book_path(book.id) %>
      <%= link_to "Edit", edit_book_path(book.id) %>
      <%= link_to "Destroy", book_path(book.id), remote: true, method: :delete, "data-confirm" => "Are you sure?" %>

    </span>


<% end %>



<h2>New Book</h2>
<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>



<%= form_with model: @book, url: '/books', method: :post do |f|%>
<h4>Title</h4>
<%= f.text_field :title %>

<h4>Body</h4>
<%= f.text_field :body %>

<div><%= f.submit 'Create Book' %></div>

<% end %>